('approver2', 'password4', 'Department 2', 'approver'),
('auditor', 'password5', 'Auditor Department', 'auditor');

-- Step 4: Create the submissions table to store pending approvals
CREATE TABLE IF NOT EXISTS submissions (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(255) NOT NULL,
    username VARCHAR(255) NOT NULL,
    email VARCHAR(255) NOT NULL,
    phonenumber VARCHAR(20) NOT NULL,
    status ENUM('Pending', 'Approved', 'Rejected') DEFAULT 'Pending', -- Status of the submission
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP -- Automatically track when the submission was created
);

